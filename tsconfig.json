{
  "compilerOptions": {
    "outDir": "./lib/dist",
    "allowJs": true,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "types": [
      "react",
      "react-native",
      "jest"
    ]
  },
  "include": [
    "./lib/src/**/*"
  ]
}
